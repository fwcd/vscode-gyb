{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "GYB",
  "patterns": [
    {
      "include": "#block"
    },
    {
      "include": "#control"
    },
    {
      "include": "#expr"
    }
  ],
  "repository": {
    "block": {
      "begin": "%{",
      "end": "}%",
      "patterns": [{
        "include": "source.python"
      }]
    },
    "control": {
      "begin": "^%\\s",
      "end": "$",
      "patterns": [{
        "include": "source.python"
      }]
    },
    "expr": {
      "begin": "\\${",
      "end": "}",
      "patterns": [{
        "include": "source.python"
      }]
    }
  },
  "scopeName": "source.gyb"
}
